#!/bin/bash

echo "Stopping mrhistoryserver {{ hadoop_namenode }}"
ssh -t {{ hadoop_namenode }} "sudo systemctl stop yarn-mrhistoryserver";
{% for datanode in hadoop_datanodes %}
echo "Stopping nodemanager {{ datanode }}";
ssh -t {{ datanode }} "sudo systemctl stop yarn-nodemanager";
{% endfor %}
echo "Stopping resourcemanager {{ hadoop_namenode }}"
ssh -t {{ hadoop_namenode }} "sudo systemctl stop yarn-resourcemanager";
