#!/bin/bash

echo "Starting namenode {{ hadoop_namenode }}"
ssh -t {{ hadoop_namenode }} "sudo systemctl start hadoop-hdfs-namenode";
echo "Starting secondarynamenode {{ hadoop_namenode }}"
ssh -t {{ hadoop_namenode }} "sudo systemctl start hadoop-hdfs-secondarynamenode";
{% for datanode in hadoop_datanodes %}
echo "Starting datanode {{ datanode }}";
ssh -t {{ datanode }} "sudo systemctl start hadoop-hdfs-datanode";
{% endfor %}
